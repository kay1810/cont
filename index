<body>
    <header>
        <h1>Certificate Overview</h1>
    </header>
    <div class="container">
        <div class="section">
            <h2>Certificate Renewal Status</h2>
            <div>
                <h3>Certificates Pending for Renewal</h3>
                <table id="pendingRenewalTable">
                    <thead>
                        <tr>
                            <th>Certificate Name</th>
                            <th>Expiry Date</th>
                            <th>Marked for Renewal</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div>
                <h3>Certificates Renewed Recently</h3>
                <table id="recentlyRenewedTable">
                    <thead>
                        <tr>
                            <th>Certificate Name</th>
                            <th>Renewed On</th>
                            <th>Pending Provisioning</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="section">
            <h2>Recently Renewed Certificates</h2>
            <div>
                <h3>Servers Pending Certificate Installation</h3>
                <table id="pendingInstallationTable">
                    <thead>
                        <tr>
                            <th>Server Name</th>
                            <th>Certificate Name</th>
                            <th>Pending New Cert Installation</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div>
                <h3>Servers with New Certificates Installed Recently</h3>
                <table id="recentlyInstalledTable">
                    <thead>
                        <tr>
                            <th>Server Name</th>
                            <th>Certificate Name</th>
                            <th>Pending New Cert Installation</th>
                            <th>Recent Installation Date</th>
                            <th>Recent Installation Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Function to fetch data from CSV file
        async function fetchData(url) {
            const response = await fetch(url);
            const data = await response.text();
            return data;
        }

        // Function to parse CSV data
        function parseCSV(data) {
            return data.trim().split('\n').map(row => row.split(','));
        }

        // Function to populate table with data
        function populateTable(tableId, data) {
            const table = document.getElementById(tableId);
            const tbody = table.querySelector('tbody');

            data.forEach(rowData => {
                const row = document.createElement('tr');
                rowData.forEach(cellData => {
                    const cell = document.createElement('td');
                    cell.textContent = cellData;
                    row.appendChild(cell);
                });
                tbody.appendChild(row);
            });
        }

        // Function to filter out data within the last 10 days
        function filterLast10Days(data) {
            const currentDate = new Date();
            const tenDaysAgo = new Date();
            tenDaysAgo.setDate(tenDaysAgo.getDate() - 10);

            return data.filter(row => {
                const date = new Date(row[1]); // Assuming the date is in the second column
                return date >= tenDaysAgo && date <= currentDate;
            });
        }

        // Fetch and parse certificate renewal data
        fetchData('Certificate_Details.csv')
            .then(parseCSV)
            .then(data => {
                const pendingRenewalData = data.filter(row => row[2] === 'Yes');
                const recentlyRenewedData = filterLast10Days(data.filter(row => row[5] === 'Success'));
                populateTable('pendingRenewalTable', pendingRenewalData);
                populateTable('recentlyRenewedTable', recentlyRenewedData);
            });

        // Fetch and parse server installation data
        fetchData('Server_Certificates.csv')
            .then(parseCSV)
            .then(data => {
                const pendingInstallationData = data.filter(row => row[2] === 'Yes');
                const recentlyInstalledData = filterLast10Days(data.filter(row => row[4] === 'Success'));
                populateTable('pendingInstallationTable', pendingInstallationData);
                populateTable('recentlyInstalledTable', recentlyInstalledData);
            });
    </script>
</body>
